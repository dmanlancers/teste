<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chatbot_fragment_01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.chatbot.ChatBotFragment"
    tools:ignore="LabelFor">

    <ImageView
        android:id="@+id/chatbot_logo"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="64dp"
        android:contentDescription="@string/ren_logo"
        android:src="@mipmap/user_ren"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/etxt_name"
        android:layout_width="255dp"
        android:layout_height="50dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="611dp"
        android:background="@drawable/chatbot_rounded_edittext"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_chatbot1" />

    <ImageView
        android:id="@+id/chatbot1_next"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="320dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="555dp"
        android:contentDescription="@string/btn_chatbot1_next"
        android:src="@mipmap/chatbot1_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/etxt_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chatbot_logo"
        app:layout_constraintVertical_bias="0.354" />

    <TextView
        android:id="@+id/txt_chatbot1"
        android:layout_width="241dp"
        android:layout_height="64dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="43dp"
        android:fontFamily="@font/pfd_intextpro_regular"
        android:lineHeight="32sp"
        android:text="@string/chatbot1_question"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/etxt_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chatbot_logo"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
