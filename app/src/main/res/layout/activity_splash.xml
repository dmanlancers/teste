<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.splash_screen.SplashScreenActivity"
    tools:layout_editor_absoluteX="105dp"
    tools:layout_editor_absoluteY="204dp">


    <ImageView
        android:id="@+id/bg_splashscreen"
        android:layout_width="0dp"
        android:layout_height="607dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/bg_splash"
        app:layout_constraintBottom_toTopOf="@+id/txt_welcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_welcome"
        style="@style/welcome"
        android:layout_width="375dp"
        android:text="@string/welcome"
        android:textAlignment="center"
        android:textColor="@color/dark_blue"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_introdution"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bg_splashscreen" />

    <TextView
        android:id="@+id/txt_introdution"
        style="@style/txt_onboarding"
        android:text="@string/introduction"
        android:textColor="@color/dark_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_welcome" />


</androidx.constraintlayout.widget.ConstraintLayout>