
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Fullscreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- Layout Styles. -->
    <style name="welcome">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginBottom">42dp</item>
        <item name="android:fontFamily">@font/pfd_intextpro_regular</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="txt_onboarding">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">90dp</item>
        <item name="android:alpha">0.5</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="card_txt_title">
        <item name="android:layout_width">278dp</item>
        <item name="android:layout_height">76dp</item>
        <item name="android:layout_marginStart">31dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">66dp</item>
        <item name="android:fontFamily">@font/pfd_intextpro_bold</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="card_txt_detail">
        <item name="android:layout_width">291dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:alpha">0.5</item>
        <item name="android:fontFamily">@font/pfd_intextpro_light</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">18sp</item>
    </style>


</resources>
