                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/btn_market_information"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/pfd_intextpro_bold"
                        android:gravity="center_horizontal"
                        android:paddingTop="80dp"
                        android:paddingBottom="12.9dp"
                        android:text="@string/txt_market_information"
                        android:textColor="@color/dark_blue"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                android:id="@+id/rel_btn_financial_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/rel_btn_market_information"
                app:layout_constraintTop_toTopOf="parent">

                <ImageButton
                    android:id="@+id/btn_financial_information"
                    android:layout_width="118dp"
                    android:layout_height="125dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/ic_chatbot_multi_selection"
                    android:contentDescription="@string/txt_financial_information"
                    android:paddingTop="29dp"
                    android:paddingBottom="49.6dp"
                    android:src="@drawable/ic_icon_financial" />

                <TextView
                    android:id="@+id/txt_btn_financial_information"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/btn_financial_information"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/pfd_intextpro_bold"
                    android:gravity="center_horizontal"
                    android:paddingTop="80dp"
                    android:paddingBottom="12.9dp"
                    android:text="@string/txt_financial_information"
                    android:textColor="@color/dark_blue"
                    android:textSize="18sp" />
            </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_btn_governance"
