                    <TextView
                        android:id="@+id/txt_btn_infrastructure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/btn_infrastructure"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/pfd_intextpro_bold"
                        android:gravity="center_horizontal"
                        android:paddingTop="80dp"
                        android:paddingBottom="12.9dp"
                        android:text="@string/txt_infrastructure"
                        android:textColor="@color/dark_blue"
                        android:textSize="18sp" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rel_btn_stakeholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/rel_btn_infrastructure"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageButton
                        android:id="@+id/btn_stakeholder"
