                        android:layout_centerHorizontal="true"
                        android:background="@drawable/ic_chatbot_multi_selection"
                        android:contentDescription="@string/txt_infrastructure"
                        android:paddingTop="29dp"
                        android:paddingBottom="49.6dp"
