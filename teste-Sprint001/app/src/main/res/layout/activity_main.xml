<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient_selector"
    tools:context=".ui.activities.main.MainActivity">


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager"
        android:layout_width="0dp"
        android:layout_height="487dp"
        android:layout_gravity="bottom|center_horizontal|end"
        android:layout_marginTop="375dp"
        android:background="@color/white"
        android:padding="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bg_onboarding"/>




    <ImageView
        android:id="@+id/bg_onboarding"
        android:layout_width="0dp"
        android:layout_height="380dp"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="38dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_skip"
        app:layout_constraintStart_toStartOf="@+id/viewpager"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ilustracoes" />

    <TextView
        android:id="@+id/btn_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="799dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/title"
        android:text="@string/skip"
        android:textColor="@color/dark_blue"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/viewpager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.32" />

    <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
        android:id="@+id/dots_indicator"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginTop="489dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="20dp"
        app:dotsColor="@color/dark_blue_dots"
        app:dotsCornerRadius="2dp"
        app:dotsSize="7dp"
        app:dotsSpacing="2dp"
        app:dotsWidthFactor="2.5"
        app:layout_constraintBottom_toTopOf="@+id/viewpager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bg_onboarding"
        app:progressMode="true"
        app:selectedDotColor="@color/dark_blue" />


</androidx.constraintlayout.widget.ConstraintLayout>