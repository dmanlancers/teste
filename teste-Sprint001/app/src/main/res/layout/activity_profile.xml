<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_profile_bg"
    tools:context=".ui.activities.splash_screen.SplashScreenActivity"
    tools:layout_editor_absoluteX="105dp"
    tools:layout_editor_absoluteY="204dp">


    <TextView
        android:id="@+id/txt_profile"
        style="@style/welcome"
        android:layout_width="286dp"
        android:layout_height="114dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="150dp"
        android:lineSpacingExtra="10sp"
        android:text="@string/profile_big_title"
        android:textAlignment="viewStart"
        android:textColor="@color/dark_blue"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_profile_type"
        style="@style/txt_onboarding"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="31dp"
        android:lineSpacingExtra="6sp"
        android:text="@string/profile_small_title"
        android:textAlignment="viewStart"
        android:textColor="@color/dark_blue"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_profile" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/profile_fab"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="36dp"
        android:clickable="true"
        android:focusable="true"
        app:backgroundTint="@color/chatbot_next"
        app:borderWidth="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>